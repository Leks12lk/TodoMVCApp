<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<title>ToDo MVC Sample</title>

	<!--     Fonts and icons     -->
	<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
	<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" />
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />

	<!-- CSS Files -->
	@Styles.Render("~/Content/css")
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />

	<!-- Modernizr and jQuery -->
	@Scripts.Render("~/bundles/modernizr")
	@Scripts.Render("~/bundles/jquery")

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
	<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
</head>
<body>
	<nav class="navbar navbar-default">
		<div class="container">
			<div class="navbar-header text-center">
				<a class="navbar-brand" href="#">ToDo</a>
			</div>
		</div>
	</nav>
	<div class="container" id="main">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - MVC ToDo App Sample by Aleksey Riabyshev</p>
		</footer>
	</div>
	
	<!-- bundle of Bootstrap js files -->
	@Scripts.Render("~/bundles/bootstrap")

	<!-- bundle of custom js files -->
	@Scripts.Render("~/bundles/tasks")

	@* initialize material design scripts *@
	<script>
		$.material.init();
	</script>

	@RenderSection("scripts", required: false)
</body>
</html>
